# Ticket folder routing
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Auto-detect RewriteBase
    # Localhost: /kaishop/ticket/
    # Production: /ticket/
    RewriteCond %{HTTP_HOST} ^localhost [NC]
    RewriteRule .* - [E=REWRITE_BASE:/kaishop/ticket/]
    RewriteCond %{HTTP_HOST} !^localhost [NC]
    RewriteRule .* - [E=REWRITE_BASE:/ticket/]
    
    # Remove .php extension
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}\.php -f
    RewriteRule ^(.*)$ $1.php [L]
</IfModule>
